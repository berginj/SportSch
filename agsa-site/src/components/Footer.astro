---
interface Props {
  siteName: string;
  region: string;
  email: string;
  instagramUrl: string;
  facebookUrl: string;
  partnerOrgName?: string;
  partnerOrgUrl?: string;
}

const { siteName, region, email, instagramUrl, facebookUrl, partnerOrgName, partnerOrgUrl } = Astro.props as Props;
const year = new Date().getFullYear();
---

<footer class="mt-16 border-t border-slate-200 bg-brand-secondary text-white">
  <div class="container-shell grid gap-8 py-12 md:grid-cols-3">
    <div>
      <h2 class="font-display text-2xl font-bold">{siteName}</h2>
      <p class="mt-3 text-sm text-slate-200">{region}</p>
      <p class="mt-2 text-sm">
        <a href={`mailto:${email}`} class="text-slate-100">{email}</a>
      </p>
    </div>
    <div>
      <h3 class="text-sm font-bold uppercase tracking-wide text-slate-200">Explore</h3>
      <ul class="mt-3 space-y-2 text-sm">
        <li><a href="/register">Registration</a></li>
        <li><a href="/schedule">Schedule</a></li>
        <li><a href="/programs">Programs</a></li>
        <li><a href="/get-involved">Get Involved</a></li>
        <li><a href="/sponsors">Sponsors</a></li>
      </ul>
    </div>
    <div>
      <h3 class="text-sm font-bold uppercase tracking-wide text-slate-200">Follow AGSA</h3>
      <div class="mt-3 flex gap-3 text-sm">
        <a class="btn-secondary !border-white/30 !bg-white/10 !text-white" href={instagramUrl} target="_blank" rel="noreferrer">Instagram</a>
        <a class="btn-secondary !border-white/30 !bg-white/10 !text-white" href={facebookUrl} target="_blank" rel="noreferrer">Facebook</a>
      </div>
    </div>
  </div>
  <div class="border-t border-white/15">
    <div class="container-shell py-4 text-xs text-slate-300 space-y-2">
      <p class="m-0">(c) {year} {siteName}. All rights reserved.</p>
      {partnerOrgName && partnerOrgUrl && (
        <p class="m-0">
          Looking for baseball? Visit our partner organization:
          <a class="ml-1 text-white underline" href={partnerOrgUrl} target="_blank" rel="noreferrer">{partnerOrgName}</a>
        </p>
      )}
    </div>
  </div>
</footer>
