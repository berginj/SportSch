---
interface Props {
  instagramUrl: string;
  facebookUrl: string;
  instagramHandle: string;
}

const { instagramUrl, facebookUrl, instagramHandle } = Astro.props as Props;
---

<section class="grid gap-6 lg:grid-cols-[1.2fr_0.8fr]">
  <article class="card p-6">
    <p class="text-xs font-bold uppercase tracking-wide text-brand-primary">Primary Channel</p>
    <h2 class="mt-2 font-display text-3xl font-semibold text-brand-secondary">Instagram</h2>
    <p class="mt-2 text-sm text-slate-600">
      Follow <strong>@{instagramHandle}</strong> for game-day updates, weather notices, and season highlights.
    </p>
    <blockquote class="instagram-media mt-4" data-instgrm-permalink={instagramUrl} data-instgrm-version="14">
      <a href={instagramUrl}>View AGSA on Instagram</a>
    </blockquote>
    <div class="mt-4 rounded-md border border-slate-200 bg-slate-50 p-3 text-sm text-slate-600">
      If the embed does not load due to privacy settings, use the direct link below.
    </div>
    <a class="btn-secondary mt-4" href={instagramUrl} target="_blank" rel="noreferrer">Follow on Instagram</a>
  </article>

  <article class="card p-6">
    <h2 class="font-display text-3xl font-semibold text-brand-secondary">More Channels</h2>
    <p class="mt-2 text-sm text-slate-600">
      Facebook remains available for families who prefer it, but Instagram is our primary updates channel.
    </p>
    <a class="btn-secondary mt-4" href={facebookUrl} target="_blank" rel="noreferrer">Visit Facebook Page</a>
  </article>

  <script async src="//www.instagram.com/embed.js"></script>
</section>
