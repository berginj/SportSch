---
import BaseLayout from "../layouts/BaseLayout.astro";
import sponsors from "../config/sponsors.json";
import site from "../config/site.json";
import LastUpdated from "../components/LastUpdated.astro";
---

<BaseLayout title="Sponsors" path="/sponsors">
  <section class="container-shell py-12">
    <h1 class="font-display text-5xl text-brand-secondary">Sponsors</h1>
    <p class="mt-4 max-w-3xl text-slate-600">
      AGSA sponsor support funds scholarships, clinics, equipment, and field operations for Arlington players.
    </p>
    <LastUpdated date={site.lastUpdated} />
  </section>

  <section class="container-shell pb-8">
    <h2 class="font-display text-3xl text-brand-secondary">Featured League Sponsors</h2>
    <p class="mt-2 text-sm text-slate-600">League Partner and Division Logo Sponsor tiers are highlighted first.</p>
    <div class="mt-4 grid gap-4 md:grid-cols-2">
      {
        sponsors.featuredTiers.map((tier) => (
          <article class="card p-6">
            <h3 class="font-display text-2xl text-brand-secondary">{tier.name}</h3>
            <p class="mt-2 text-sm text-slate-600">{tier.description}</p>
            <div class="mt-4 grid gap-3 sm:grid-cols-2">
              {
                tier.sponsors.map((sponsor) => (
                  <a href={sponsor.website} target="_blank" rel="noreferrer" class="flex min-h-24 items-center justify-center rounded-lg border border-slate-200 p-3">
                    <img src={sponsor.logo} alt={`${sponsor.name} logo`} class="max-h-14 w-auto" loading="lazy" />
                  </a>
                ))
              }
            </div>
          </article>
        ))
      }
    </div>
  </section>

  <section class="container-shell pb-8">
    <h2 class="font-display text-3xl text-brand-secondary">Team Sponsors by Group</h2>
    <div class="mt-4 grid gap-4 md:grid-cols-2">
      {
        sponsors.teamGroups.map((group) => (
          <article class="card p-6">
            <h3 class="font-display text-2xl text-brand-secondary">{group.name}</h3>
            <p class="mt-2 text-sm text-slate-600">{group.description}</p>
            <ul class="mt-4 list-disc space-y-1 pl-5 text-sm text-slate-700">
              {group.sponsors.map((sponsorName) => <li>{sponsorName}</li>)}
            </ul>
          </article>
        ))
      }
    </div>
  </section>

  <section class="container-shell pb-12">
    <article class="card p-6">
      <h2 class="font-display text-3xl text-brand-secondary">Become a sponsor</h2>
      <p class="mt-2 text-sm text-slate-600">
        Start your 1-year sponsorship application online and choose card or check payment.
      </p>
      <p class="mt-2 text-sm text-slate-600">
        Questions: <a href={`mailto:${site.contactRouting.sponsorship}`}>{site.contactRouting.sponsorship}</a>
      </p>
      <a href="/sponsor" class="btn-primary mt-4">Open sponsorship form</a>
    </article>
  </section>
</BaseLayout>
