---
import BaseLayout from "../layouts/BaseLayout.astro";
import site from "../config/site.json";
import LastUpdated from "../components/LastUpdated.astro";

const board = [
  { role: "President", name: "Mitch McCann", email: "agsafastpitchpresident@gmail.com" },
  { role: "Treasurer", name: "Daryn Larkin", email: "agsafastpitchtreasurer@gmail.com" },
  { role: "Secretary", name: "Nancy Dotterweich", email: "agsafastpitchsecretary@gmail.com" },
  { role: "Travel Team Director", name: "Heather Grady", email: "agsafastpitchtravel@gmail.com" }
];
---

<BaseLayout title="About" path="/about">
  <section class="container-shell py-12">
    <h1 class="font-display text-5xl text-brand-secondary">About AGSA</h1>
    <p class="mt-4 max-w-3xl text-slate-600">
      Arlington Girls Softball Association serves Arlington families with player-first softball experiences focused on development, teamwork, and sportsmanship.
    </p>
    <LastUpdated date={site.lastUpdated} />
  </section>

  <section class="container-shell pb-12">
    <div class="grid gap-6 lg:grid-cols-2">
      <article class="card overflow-hidden">
        <img src="/images/agsa/action-shot.jpg" alt="AGSA players in game action" class="h-56 w-full object-cover" loading="lazy" />
        <div class="p-6">
          <h2 class="font-display text-3xl text-brand-secondary">Mission</h2>
          <p class="mt-3 text-sm leading-7 text-slate-600">
            Provide a safe, structured environment where players can develop softball skills, confidence, and leadership.
          </p>
        </div>
      </article>
      <article class="card overflow-hidden">
        <img src="/images/agsa/team-hit-squad.jpg" alt="AGSA Hit Squad team photo" class="h-56 w-full object-cover" loading="lazy" />
        <div class="p-6">
          <h2 class="font-display text-3xl text-brand-secondary">Coaching Philosophy</h2>
          <p class="mt-3 text-sm leading-7 text-slate-600">
            Coaches emphasize fundamentals, respect, and game intelligence so every athlete gets meaningful reps and clear growth pathways.
          </p>
        </div>
      </article>
    </div>
  </section>

  <section class="container-shell pb-12">
    <article class="card p-6">
      <h2 class="font-display text-3xl text-brand-secondary">Partner Organization</h2>
      <p class="mt-3 text-sm leading-7 text-slate-600">
        AGSA proudly partners with <a href={site.partnerOrg.url} target="_blank" rel="noreferrer">{site.partnerOrg.name}</a> to support youth baseball and softball opportunities across Arlington.
      </p>
      <p class="mt-2 text-sm text-slate-600">
        Looking for baseball programs? Visit <a href={site.partnerOrg.url} target="_blank" rel="noreferrer">{site.partnerOrg.name}</a>.
      </p>
    </article>
  </section>

  <section class="container-shell pb-12">
    <article class="card p-6">
      <h2 class="font-display text-3xl text-brand-secondary">Board & Staff</h2>
      <div class="mt-5 grid gap-4 md:grid-cols-2">
        {
          board.map((member) => (
            <div class="rounded-lg border border-slate-200 p-4">
              <p class="m-0 text-xs font-bold uppercase tracking-wide text-brand-primary">{member.role}</p>
              <h3 class="mt-1 text-lg font-semibold text-brand-secondary">{member.name}</h3>
              <a href={`mailto:${member.email}`} class="mt-2 inline-block text-sm text-brand-primary">{member.email}</a>
            </div>
          ))
        }
      </div>
      <p class="mt-5 text-sm text-slate-600">
        General questions: <a href={`mailto:${site.contactEmail}`}>{site.contactEmail}</a>
      </p>
    </article>
  </section>
</BaseLayout>
