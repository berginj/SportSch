---
import BaseLayout from "../layouts/BaseLayout.astro";
import site from "../config/site.json";

const board = [
  { role: "President", name: "Mitch McCann", email: "agsafastpitchpresident@gmail.com" },
  { role: "Treasurer", name: "Daryn Larkin", email: "agsafastpitchtreasurer@gmail.com" },
  { role: "Secretary", name: "Nancy Dotterweich", email: "agsafastpitchsecretary@gmail.com" },
  { role: "Travel Team Director", name: "Heather Grady", email: "agsafastpitchtravel@gmail.com" }
];
---

<BaseLayout title="About" path="/about">
  <section class="container-shell py-12">
    <h1 class="font-display text-5xl text-brand-secondary">About AGSA</h1>
    <p class="mt-4 max-w-3xl text-slate-600">
      AGSA has served Avenel-area families for decades with a player-first softball experience built on development, accountability, and community.
    </p>
  </section>

  <section class="container-shell pb-12">
    <div class="grid gap-6 lg:grid-cols-2">
      <article class="card p-6">
        <h2 class="font-display text-3xl text-brand-secondary">Mission</h2>
        <p class="mt-3 text-sm leading-7 text-slate-600">
          Deliver a safe, structured environment where players can develop softball skills, confidence, and sportsmanship while building lifelong friendships.
        </p>
      </article>
      <article class="card p-6">
        <h2 class="font-display text-3xl text-brand-secondary">Coaching Philosophy</h2>
        <p class="mt-3 text-sm leading-7 text-slate-600">
          Coaches focus on fundamentals, player respect, and game intelligence. Every athlete deserves quality reps, clear communication, and positive challenge.
        </p>
      </article>
    </div>
  </section>

  <section class="container-shell pb-12">
    <article class="card p-6">
      <h2 class="font-display text-3xl text-brand-secondary">Board & Staff</h2>
      <div class="mt-5 grid gap-4 md:grid-cols-2">
        {
          board.map((member) => (
            <div class="rounded-lg border border-slate-200 p-4">
              <p class="m-0 text-xs font-bold uppercase tracking-wide text-brand-primary">{member.role}</p>
              <h3 class="mt-1 text-lg font-semibold text-brand-secondary">{member.name}</h3>
              <a href={`mailto:${member.email}`} class="mt-2 inline-block text-sm text-brand-primary">{member.email}</a>
            </div>
          ))
        }
      </div>
      <p class="mt-5 text-sm text-slate-600">
        General questions: <a href={`mailto:${site.contactEmail}`}>{site.contactEmail}</a>
      </p>
    </article>
  </section>
</BaseLayout>
