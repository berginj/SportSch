---
import BaseLayout from "../../layouts/BaseLayout.astro";
import settings from "../../config/sponsorship-settings.json";

const appId = Astro.url.searchParams.get("appId") || "pending";
---

<BaseLayout title="Sponsor by Check" path="/sponsor/check">
  <section class="container-shell py-12">
    <article class="card p-6">
      <h1 class="font-display text-5xl text-brand-secondary">Pay by check</h1>
      <p class="mt-3 text-sm text-slate-600">Application ID: <strong>{appId}</strong></p>
      <p class="mt-2 text-sm text-slate-700">
        Your sponsorship application is recorded as pending payment. Print this page and include your application ID with your check.
      </p>
      <div class="mt-4 rounded-lg border border-slate-200 bg-slate-50 p-4 text-sm text-slate-700">
        <p class="m-0"><strong>Mail checks to:</strong></p>
        <p class="m-0 mt-1">{settings.mailingAddressForChecks}</p>
        <p class="mt-2 m-0"><strong>Memo:</strong> AGSA Sponsorship + {appId}</p>
        <p class="m-0 mt-1"><strong>Term:</strong> {settings.sponsorshipTermMonths} months (1 full year)</p>
      </div>
      <div class="mt-4 flex flex-wrap gap-2">
        <button type="button" class="btn-secondary" onclick="window.print()">Print summary</button>
        <a href="/sponsor" class="btn-primary">Return to sponsor form</a>
      </div>
    </article>
  </section>
</BaseLayout>
