---
import BaseLayout from "../../layouts/BaseLayout.astro";
const appId = Astro.url.searchParams.get("appId") || "";
---

<BaseLayout title="Sponsor Payment Canceled" path="/sponsor/cancel">
  <section class="container-shell py-12">
    <article class="card p-6">
      <h1 class="font-display text-5xl text-brand-secondary">Payment canceled</h1>
      {appId && <p class="mt-3 text-sm text-slate-600">Application ID: <strong>{appId}</strong></p>}
      <p class="mt-3 text-sm text-slate-600">
        Your sponsorship form details were not charged. You can return to complete payment or choose the pay-by-check option.
      </p>
      <div class="mt-5 flex flex-wrap gap-2">
        <a class="btn-primary" href="/sponsor">Return to sponsor form</a>
        <a class="btn-secondary" href={`/sponsor/check?appId=${encodeURIComponent(appId || "pending")}`}>Use pay-by-check</a>
        <a class="btn-secondary" href="/contact">Contact AGSA</a>
      </div>
    </article>
  </section>
</BaseLayout>
