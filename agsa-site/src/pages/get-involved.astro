---
import BaseLayout from "../layouts/BaseLayout.astro";
import site from "../config/site.json";
import LastUpdated from "../components/LastUpdated.astro";

const roles = [
  { title: "Assistant Coach", expectation: "2-3 practices or games per week during season." },
  { title: "Team Parent", expectation: "1-2 hours weekly for communication and logistics." },
  { title: "Field Crew", expectation: "1-2 shifts per month for setup and maintenance." },
  { title: "Game Day Support", expectation: "Flexible event-based support for scorekeeping and operations." },
];
---

<BaseLayout title="Get Involved" path="/get-involved">
  <section class="container-shell py-12">
    <h1 class="font-display text-5xl text-brand-secondary">Get Involved</h1>
    <p class="mt-4 max-w-3xl text-slate-600">
      Volunteers keep AGSA running. Join as a coach, team parent, field helper, or game-day volunteer.
    </p>
    <LastUpdated date={site.lastUpdated} />
  </section>

  <section class="container-shell pb-12">
    <div class="grid gap-6 lg:grid-cols-[1fr_1fr]">
      <article class="card p-6">
        <h2 class="font-display text-3xl text-brand-secondary">Volunteer Roles</h2>
        <ul class="mt-4 space-y-3">
          {
            roles.map((role) => (
              <li class="rounded-lg border border-slate-200 p-4">
                <p class="m-0 font-semibold text-brand-secondary">{role.title}</p>
                <p class="mt-1 text-sm text-slate-600"><strong>Time expectation:</strong> {role.expectation}</p>
              </li>
            ))
          }
        </ul>
      </article>

      <form class="card p-6" action="https://formspree.io/f/PLACEHOLDER_VOLUNTEER_FORM_ID" method="POST">
        <h2 class="font-display text-3xl text-brand-secondary">Volunteer Interest Form</h2>
        <div class="mt-4 grid gap-4">
          <label class="text-sm font-semibold text-brand-secondary">
            Name
            <input class="mt-2 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm" type="text" name="name" required />
          </label>
          <label class="text-sm font-semibold text-brand-secondary">
            Email
            <input class="mt-2 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm" type="email" name="email" required />
          </label>
          <label class="text-sm font-semibold text-brand-secondary">
            Preferred role
            <select class="mt-2 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm" name="role" required>
              <option>Assistant Coach</option>
              <option>Team Parent</option>
              <option>Field Crew</option>
              <option>Game Day Support</option>
            </select>
          </label>
          <label class="text-sm font-semibold text-brand-secondary">
            Notes
            <textarea class="mt-2 min-h-28 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm" name="notes"></textarea>
          </label>
          <input type="text" name="_gotcha" class="hidden" tabindex="-1" autocomplete="off" aria-hidden="true" />
        </div>
        <button type="submit" class="btn-primary mt-5">Submit interest</button>
      </form>
    </div>
  </section>
</BaseLayout>
