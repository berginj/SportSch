---
import BaseLayout from "../layouts/BaseLayout.astro";

const policies = [
  {
    title: "Code of Conduct",
    body: "Players, coaches, and families are expected to demonstrate respect, sportsmanship, and accountability at all practices and games."
  },
  {
    title: "Refund Policy",
    body: "Refund windows, administrative fees, and special-case exceptions are determined per season and posted before registration closes."
  },
  {
    title: "Weather Policy",
    body: "Field safety decisions are final and communicated through the hotline, social channels, and schedule updates."
  },
  {
    title: "Concussion & Safety Resources",
    body: "AGSA follows league and state safety guidance. Families should review annual concussion and return-to-play recommendations."
  }
];
---

<BaseLayout title="Policies" path="/policies">
  <section class="container-shell py-12">
    <h1 class="font-display text-5xl text-brand-secondary">Policies</h1>
    <p class="mt-4 max-w-3xl text-slate-600">
      League policies help maintain a safe, consistent, and fair environment for all athletes and families.
    </p>
  </section>

  <section class="container-shell pb-12">
    <div class="space-y-4">
      {
        policies.map((policy) => (
          <article class="card p-6">
            <h2 class="font-display text-3xl text-brand-secondary">{policy.title}</h2>
            <p class="mt-3 text-sm leading-7 text-slate-600">{policy.body}</p>
          </article>
        ))
      }
    </div>
  </section>
</BaseLayout>
