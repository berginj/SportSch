---
import BaseLayout from "../layouts/BaseLayout.astro";

const divisions = [
  { name: "6U Tee Ball", focus: "Intro fundamentals and confidence." },
  { name: "8U", focus: "Skill progression, game awareness, and team play." },
  { name: "10U", focus: "Pitching/catching foundations and strategic growth." },
  { name: "12U", focus: "Competitive rec + tournament preparation." },
  { name: "14U", focus: "Advanced game IQ and situational execution." },
  { name: "16/18U", focus: "High school prep and high-level competition." }
];

const timeline = [
  { month: "January", item: "Registration opens and coach recruiting." },
  { month: "March", item: "Player evaluations and team formation." },
  { month: "April", item: "Opening day and regular season launch." },
  { month: "June", item: "Playoffs, all-star teams, and tournaments." },
  { month: "September", item: "Fall ball development season." }
];
---

<BaseLayout title="Programs" path="/programs">
  <section class="container-shell py-12">
    <h1 class="font-display text-5xl text-brand-secondary">Programs</h1>
    <p class="mt-4 max-w-3xl text-slate-600">
      AGSA programs are designed for complete beginners through highly competitive travel players, with structured development in every division.
    </p>
  </section>

  <section class="container-shell pb-12">
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {
        divisions.map((division) => (
          <article class="card p-5">
            <h2 class="font-display text-3xl text-brand-secondary">{division.name}</h2>
            <p class="mt-2 text-sm text-slate-600">{division.focus}</p>
          </article>
        ))
      }
    </div>
  </section>

  <section class="container-shell pb-12">
    <article class="card p-6">
      <h2 class="font-display text-3xl text-brand-secondary">Season Timeline</h2>
      <ol class="mt-5 space-y-3">
        {
          timeline.map((item) => (
            <li class="rounded-lg border border-slate-200 px-4 py-3">
              <span class="font-semibold text-brand-primary">{item.month}:</span> <span class="text-slate-700">{item.item}</span>
            </li>
          ))
        }
      </ol>
    </article>
  </section>
</BaseLayout>
