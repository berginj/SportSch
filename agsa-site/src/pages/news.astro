---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("news")).sort((a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf());
---

<BaseLayout title="News" path="/news">
  <section class="container-shell py-12">
    <h1 class="font-display text-5xl text-brand-secondary">News & Updates</h1>
    <p class="mt-4 max-w-3xl text-slate-600">
      Search updates by keyword to quickly find announcements, field notices, and program changes.
    </p>
  </section>

  <section class="container-shell pb-6">
    <article class="card p-6">
      <label class="text-sm font-semibold text-brand-secondary">
        Search news
        <input data-news-search class="mt-2 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm" type="search" placeholder="Try: tryouts, weather, registration" />
      </label>
      <p data-news-status class="mt-3 text-sm text-slate-600"></p>
    </article>
  </section>

  <section class="container-shell pb-12">
    <div class="grid gap-4">
      {
        posts.map((post) => (
          <article data-news-card class="card p-6">
            <p class="m-0 text-xs font-semibold uppercase tracking-wide text-brand-primary">{post.data.publishDate}</p>
            <h2 class="mt-2 text-2xl font-semibold text-brand-secondary">{post.data.title}</h2>
            <p class="mt-3 text-sm text-slate-600">{post.data.summary}</p>
            <a href={`/news/${post.slug}/`} class="mt-4 inline-flex text-sm font-semibold text-brand-primary">
              Read article
            </a>
          </article>
        ))
      }
    </div>
  </section>

  <script>
    import "../scripts/news-search.js";
  </script>
</BaseLayout>
